<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DnsClient" Version="1.8.0" />
  </ItemGroup>


    <PropertyGroup>
      <PackageId>Joaoaalves.MailValidator</PackageId>
      <Version>0.0.1</Version>
      <Authors>João Alves</Authors>
      <Company>João Alves</Company>
      <Description>Adds e-mail validators</Description>
      <PackageTags>Mail;Validation;E-mail</PackageTags>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

      <RepositoryUrl>https://github.com/Joaoaalves/mail-validator</RepositoryUrl>
      <PackageProjectUrl>https://github.com/Joaoaalves/mail-validator</PackageProjectUrl>
      <RepositoryType>git</RepositoryType>
    </PropertyGroup>
</Project>
